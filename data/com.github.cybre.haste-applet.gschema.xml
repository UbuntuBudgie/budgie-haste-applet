<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="budgie">
  <enum id="ProtocolType">
    <value value='0' nick='http'/>
    <value value='1' nick='https'/>
  </enum>

  <schema id="com.github.cybre.haste-applet">
    <key type="b" name="enable-label">
      <default>false</default>
      <summary>Enable applet label</summary>
      <description>Show the label on the applet button</description>
    </key>

    <key type="a(xss)" name="history">
      <default>[]</default>
      <summary>History</summary>
      <description>List of hastes.</description>
    </key>

    <key type="s" name="haste-address">
      <default>'hastebin.com'</default>
      <summary>haste-server Address</summary>
      <description>The haste-server address to use for pasting.</description>
    </key>

    <key name="protocol" enum="ProtocolType">
      <default>'http'</default>
      <summary>haste-server protocol</summary>
      <description>The haste-server protocol to use.</description>
    </key>

    <key type="b" name="fix-applied">
      <default>false</default>
    </key>
  </schema>
</schemalist>